  <!-- Script para agregar/eliminar preguntas opcionales -->
  <script>
    var preguntaOpcional_selectedRow = null;
    function preguntaOpcional_onFormSubmit() {
      if (preguntaOpcional_validate()) {
        var preguntaOpcional_formData = preguntaOpcional_readFormData();
        if (preguntaOpcional_selectedRow == null) preguntaOpcional_insertNewRecord(preguntaOpcional_formData);
        else preguntaOpcional_updateRecord(preguntaOpcional_formData);
        preguntaOpcional_resetForm();
      }
    }
    function preguntaOpcional_readFormData() {
      var preguntaOpcional_formData = {};
      preguntaOpcional_formData["preguntaOpcional"] = document.getElementById("preguntaOpcional").value;
      return preguntaOpcional_formData;
    }
    function preguntaOpcional_insertNewRecord(data) {
      var preguntaOpcional_table = document
      .getElementById("preguntaOpcional_List")
      .getElementsByTagName("tbody")[0];
      var preguntaOpcional_newRow = preguntaOpcional_table.insertRow(preguntaOpcional_table.length);
      cell1 = preguntaOpcional_newRow.insertCell(0);
      cell1.innerHTML = data.preguntaOpcional;
      cell2 = preguntaOpcional_newRow.insertCell(1);
      cell2.innerHTML = `<a onClick="preguntaOpcional_onEdit(this)">‚úèÔ∏è</a> <a onClick="preguntaOpcional_onDelete(this)">üóëÔ∏è</a>`;
    }
    function preguntaOpcional_resetForm() {
      document.getElementById("preguntaOpcional").value = "";
      preguntaOpcional_selectedRow = null;
    }
    function preguntaOpcional_onEdit(td) {
      preguntaOpcional_selectedRow = td.parentElement.parentElement;
      document.getElementById("preguntaOpcional").value = preguntaOpcional_selectedRow.cells[0].innerHTML;
    }
    function preguntaOpcional_updateRecord(preguntaOpcional_formData) {
      preguntaOpcional_selectedRow.cells[0].innerHTML = preguntaOpcional_formData.preguntaOpcional;
    }
    function preguntaOpcional_onDelete(td) {
      if (confirm("¬øEst√°s seguro de que quer√©s borrar esta pregunta opcional, maestro?")) {
        row = td.parentElement.parentElement;
        document.getElementById("preguntaOpcional_List").deleteRow(row.rowIndex);
        preguntaOpcional_resetForm();
      }
    }
    function preguntaOpcional_validate() {
      preguntaOpcional_isValid = true;
      if (document.getElementById("preguntaOpcional").value == "") {
        preguntaOpcional_isValid = false;
        document.getElementById("preguntaOpcional_ValidationError").classList.remove("hide");
        confirm("Che, no est√°s agregando ninguna pregunta opcional...\nNo te hagas el pillo.");
      } else {
        preguntaOpcional_isValid = true;
        if (
          !document
          .getElementById("preguntaOpcional_ValidationError")
          .classList.contains("hide")
        )
        document.getElementById("preguntaOpcional_ValidationError").classList.add("hide");
      }
      return preguntaOpcional_isValid;
    }
  </script>


