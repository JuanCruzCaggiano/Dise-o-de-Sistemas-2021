https://templatemo.com/tm-564-plot-listing

-->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown animated background-header" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/" class="logo"><img src="images/perroygato.png" style="width: 60px; "> GESOC
                        </a>

                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        {{>headerMainTemplate.hbs}}
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div class="main-banner2">
    {{>ingresoModal.hbs}}
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="top-text header-text">
                        <h2></h2>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="card ">
        <div class="card-header text-center">
            REGISTRO DE USUARIO
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-lg-6">
                        <form method="post" action="/crearCuenta">
                            <div class="form-row">
                                <div class="form-group ">
                                    <label for="usuario">Id de Usuario</label>
                                    <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese Id de Usuario">
                                </div>
                                <div class="form-group ">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" id="password" name="password"placeholder="Ingrese su Contraseña">
                                </div>
                                <div class="form-group ">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese su Nombre">
                                </div>
                                <div class="form-group ">
                                    <label for="documento">Documento</label>
                                    <select class="form-select" aria-label="Default select example" id="tipoDoc" name="tipoDoc" placeholder="Documentos">

                                        {{#each tipoDoc}}
                                        <option value="{{this}}">{{this}}</option>
                                        {{/each}}
                                    </select>
                                    <input type="text" class="form-control" id="documento" name="documento" placeholder="Ingrese su Documento">
                                </div>
                                <div class="form-group ">
                                    <label for="fecha">Fecha de Nacimiento</label>
                                    <input type="text" class="form-control" id="fecha" name="fecha" placeholder="yyyy-mm-dd">
                                </div>
                                <div class="form-group ">
                                    <label for="telefono">Telefono</label>
                                    <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Numero de Telefono">
                                </div>

                                <div class="form-group ">
                                    <label for="apellido">Apellido</label>
                                    <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Ingrese su Apellido">
                                </div>
                                <div class="form-group ">
                                    <label for="direccion">Apellido</label>
                                    <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Ingrese su Direccion">
                                </div>
                                <div class="form-group ">
                                    <label for="email">Mail</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su Email">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="duenio" id="duenio">
                                    <label class="form-check-label" for="duenio">Dueño</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="adoptante" id="adoptante">
                                    <label class="form-check-label" for="adoptante">Adoptante</label>
                                </div>
                                <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="voluntario" id="voluntario">
                                        <label class="form-check-label" for="voluntario">Voluntario</label>
                                </div>
                                <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="rescatista" id="rescatista">
                                        <label class="form-check-label" for="rescatista">Rescatista</label>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-primary" role="button" type="submit" aria-disabled="true">Registrarme</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-1 mb-2">
                <li class="nav-item"><a href="/nosotros" class="nav-link px-3 text-muted">Nosotros</a></li>
                <li class="nav-item"><a href="/FAQs" class="nav-link px-3 text-muted">FAQs</a></li>
                <li class="nav-item"><a href="/contacto" class="nav-link px-3 text-muted">Contacto</a></li>
            </ul>
            <p class="text-center text-muted">© Rescate de Patitas</p>
        </footer>



        <!-- Scripts -->
        <script src="jquery/jquery.min.js"></script>
        <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="js/owl-carousel.js"></script>
        <script src="js/animation.js"></script>
        <script src="js/imagesloaded.js"></script>
        <script src="js/custom.js"></script>
    </div>

</body>

</html>
